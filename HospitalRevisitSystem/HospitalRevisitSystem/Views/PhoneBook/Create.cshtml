@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HospitalRevisitSystem.tbPhoneBook

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <input type="hidden" id="Patient_ID" name="Patient_ID" value="@ViewBag.Patient_ID" />
        
        <div class="editor-label">
           电话号码
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone_Number)
            @Html.ValidationMessageFor(model => model.Phone_Number)
        </div>

        <div class="editor-label">
            机主姓名
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone_Name)
            @Html.ValidationMessageFor(model => model.Phone_Name)
        </div>

        <div class="editor-label">
            与患者关系
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.patient_relation)
            @Html.ValidationMessageFor(model => model.patient_relation)
        </div>
       
        <p>
            @Html.ActionLink("取消", "Index", "PhoneBook",new {  id=ViewBag.Patient_ID}, new { @class = "btn" })
            <input type="submit" value="提交" class="btn btn-success" />
        </p>
    </fieldset>
}
