@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HospitalRevisitSystem.tbPhoneBook

@{
    ViewBag.Title = "Edit";
}

<h2>编辑电话号码簿</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>tbPhoneBook</legend>

        <div class="editor-label">
            患者编号
        </div>
        <div class="editor-field">
            @Html.DropDownList("Patient_ID", String.Empty)
            @Html.ValidationMessageFor(model => model.Patient_ID)
        </div>

        <div class="editor-label">
           电话号码
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone_Number)
            @Html.ValidationMessageFor(model => model.Phone_Number)
        </div>

        <div class="editor-label">
            机主姓名
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone_Name)
            @Html.ValidationMessageFor(model => model.Phone_Name)
        </div>

        <div class="editor-label">
            与患者关系
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.patient_relation)
            @Html.ValidationMessageFor(model => model.patient_relation)
        </div>

         @Html.HiddenFor(model => model.PhoneBook_ID)
        <p>
            @Html.ActionLink("取消", "Index","PhoneBook",null,new {@class= "btn"}) <input type="submit" value="提交" class="btn btn-success" />
        </p>
    </fieldset>
}


