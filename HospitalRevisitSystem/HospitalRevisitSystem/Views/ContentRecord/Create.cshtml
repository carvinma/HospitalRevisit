@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HospitalRevisitSystem.tbContent_Record

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>tbContent_Record</legend>


        <div class="editor-label">
           内容
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="editor-label">
            上级编码
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Superior_No)
            @Html.ValidationMessageFor(model => model.Superior_No)
        </div>

        <div class="editor-label">
            顺序号
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sequence_Number)
            @Html.ValidationMessageFor(model => model.Sequence_Number)
        </div>

         
        <p>
            @Html.ActionLink("取消", "Index","ContentRecord",null,new {@class= "btn"}) <input type="submit" value="提交" class="btn btn-success" />
        </p>
    </fieldset>
}




